<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" minHeight="-Infinity" minWidth="-Infinity" style="-fx-background-color: #333333;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="android.FXMLAndroidController">
    <children>
        <ImageView fx:id="droidImage" nodeOrientation="INHERIT" onMouseClicked="#handleImageClickAction" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@android.png" />
            </image>
        </ImageView>
        <Label text="Hello! I'm a droid" textFill="#ffd764">
            <font>
                <Font size="24.0" />
            </font>
            <VBox.margin>
                <Insets bottom="30.0" />
            </VBox.margin>
        </Label>

        <Separator style="-fx-background-color: #00ff00;" />

        <Label fx:id="labelWarning" text="Warning! Don't touch the droid..." textFill="#bbbbbb">
            <VBox.margin>
                <Insets bottom="30.0" top="30.0" />
            </VBox.margin>
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <Label fx:id="greetingLabel" textFill="#bbbbbb">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <Label fx:id="timeLabel" textFill="#bbbbbb">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
